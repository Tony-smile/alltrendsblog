<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

    <body>
        <%- include('layouts/navbar'); -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">

                
                <div class="container position-relative px-4 px-lg-5"><main class="main">
                    <h1>Welcome!</h1>
                    <form class="search" action="/search" method="GET">
                        <input class="bar" type="text" placeholder="Search Posts..." name="resName"> <button><i
                                class="fas fa-search"></i></button>
                    </form>
                </main>



                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="site-heading">
                                <h1>All Trend's Blog</h1>
                                <span class="subheading">People's Blog</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main Content-->
            <div class="container px-4 px-lg-5">
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase"
                    href="/">Latest Posts →</a></div>
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <!-- Post preview-->
                        <% for (var i=0; i<blogposts.length; i++){%>
                            <div class="post-preview">
                                <a href="/post/<%=blogposts[i]._id%>">

                                    <h2 class="post-title">
                                        <%=blogposts[i].title%>
                                    </h2>

                                 
                                        <%- blogposts[i].image%>
                                

                                </a>
                                <p class="post-meta">
                                    Posted by
                                    <a href="#">
                                        <%=blogposts[i].userid.username %>
                                    </a>
                                    on<%=blogposts[i].datePosted.toDateString()%>
                                </p>
                            </div>
                            <!-- Divider-->
                            <hr>
                            <%}%>
                                <!-- Post preview-->
                                <!--  -->
                                <!-- Pager-->
                                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase"
                                        href="#!">Older Posts →</a></div>
                    </div>
                </div>
            </div>
            <%- include('layouts/footer'); -%>
                <%- include('layouts/scripts'); -%>

    </body>

</html>